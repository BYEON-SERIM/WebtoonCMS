@Entity
@Getter @Setter
@NoArgsConstructor
public class Webtoon {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String title;
    private String author;
    private String genre;
    private String status;
    private Long viewCount;
    private String thumbnail;
    private Integer sortOrder; // Integer로 유지
    
    @Column(columnDefinition = "TEXT")
    private String description;
    
    private String tags;

    @Builder // 생성자 매개변수 타입을 Integer로 맞추고 tags도 추가
    public Webtoon(String title, String author, String genre, String status, Long viewCount, String thumbnail, String description, Integer sortOrder, String tags) {
        this.title = title;
        this.author = author;
        this.genre = genre;
        this.status = status;
        this.viewCount = viewCount;
        this.thumbnail = thumbnail;
        this.description = description;
        this.sortOrder = sortOrder;
        this.tags = tags;
    }
}