package com.example.cms.service;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;
import org.springframework.web.reactive.function.client.WebClient;
import java.util.Map;
import java.util.List;

@Service
public class GeminiService {

    private final WebClient webClient;

    @Value("${gemini.api.key}")
    private String apiKey;

    public GeminiService(WebClient.Builder webClientBuilder) {
        // 도메인 뒤에 슬래시(/)를 넣지 마세요.
        this.webClient = webClientBuilder
            .baseUrl("https://generativelanguage.googleapis.com")
            .build();
    }

    public String getRecommendedTags(String description) {
        String prompt = "웹툰 줄거리: " + description + "\n위 내용을 분석해서 어울리는 태그 5개를 #태그1, #태그2 형식으로 답변해줘.";

        Map<String, Object> body = Map.of(
            "contents", List.of(
                Map.of("parts", List.of(
                    Map.of("text", prompt)
                ))
            )
        );

        try {
            return webClient.post()
                // [수정] v1beta 대신 v1을 사용하고 경로를 명확히 합니다.
                .uri(uriBuilder -> uriBuilder
                    .path("/v1/models/gemini-1.5-flash:generateContent")
                    .queryParam("key", apiKey)
                    .build())
                .bodyValue(body)
                .retrieve()
                .bodyToMono(Map.class)
                .map(response -> {
                    try {
                        List candidates = (List) response.get("candidates");
                        Map candidate = (Map) candidates.get(0);
                        Map content = (Map) candidate.get("content");
                        List parts = (List) content.get("parts");
                        Map part = (Map) parts.get(0);
                        return (String) part.get("text");
                    } catch (Exception e) {
                        return "분석 결과 없음";
                    }
                })
                .block();
        } catch (Exception e) {
            System.err.println("Gemini API 호출 에러: " + e.getMessage());
            // 만약 404가 계속 난다면 모델명을 "gemini-pro"로 바꿔서 시도해보세요.
            return "AI 태그 추출 실패";
        }
    }
}