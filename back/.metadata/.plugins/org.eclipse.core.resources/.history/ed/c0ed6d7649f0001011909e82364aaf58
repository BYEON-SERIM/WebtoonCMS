package com.example.cms.dto;

import com.example.cms.domain.Webtoon;
import lombok.Getter;
import lombok.Setter;
import java.time.LocalDateTime;

@Getter @Setter
public class WebtoonRequest {
    private String title;
    private String author;
    private String genre;
    private String status;
    private String description;
    private String tags;
    private Long viewCount;
    private Integer sortOrder;
    private LocalDateTime scheduledAt;

    // DTO를 Entity로 변환해주는 메서드
    public Webtoon toEntity() {
        Webtoon webtoon = new Webtoon();
        webtoon.setTitle(this.title);
        webtoon.setAuthor(this.author);
        webtoon.setGenre(this.genre);
        webtoon.setStatus(this.status);
        webtoon.setDescription(this.description);
        webtoon.setTags(this.tags);
        webtoon.setViewCount(this.viewCount);
        webtoon.setSortOrder(this.sortOrder);
        webtoon.setScheduledAt(this.scheduledAt);
        return webtoon;
    }
}